<?xml version="1.0" encoding="UTF-8" ?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="your-excuse-notification-icon"
    version="1.0.0">

    <name>Your Excuse Notification Icon Plugin</name>

    <description>Your Excuse Notification Icon Plugin</description>

    <license>Apache 2.0</license>
    
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>
    
	<js-module src="www/plugin.js" name="your-excuse-notification-icon">
		<clobbers target="your-excuse-notification-icon" />
	</js-module>
	
    <platform name="android">
		
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
	        <meta-data android:name = "com.google.firebase.messaging.default_notification_icon" android:icon = "@drawable/notification_icon" />
        </config-file>
		
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="your-excuse-notification-icon" >
                <param name="android-package" value="com.qrglue.excuse.android.your_excuse_notification_icon"/>
            </feature>
        </config-file>
		
	<source-file src="your-excuse-notification-icon/your_excuse_notification_icon.java" target-dir="src/com/qrglue/excuse/android" />

        <resource-file src="drawable/notification_icon.png" target="res/drawable/notification_icon.png" />
        
    </platform>
</plugin>
